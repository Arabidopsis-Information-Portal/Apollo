<?xml version="1.0" encoding="UTF-8"?>
<oauth_configuration>

  <provider id="google" enable="TRUE">
    
    <!-- The common name of the Oauth provider (e.g. Google) this is shown to the user-->
    <provider_name>Google</provider_name>
  
    <!-- Sign in Image for Provider. Should be in the WebApollo/images directory-->
    <provider_logo>sign-in-with-google.png</provider_logo>

    <!-- Oauth provider authentication URL -->
    <auth_url>https://accounts.google.com/o/oauth2/auth</auth_url>
  
    <!-- Oauth provider token URL -->
    <token_url>https://accounts.google.com/o/oauth2/token</token_url>
  
    <!-- Oauth provider profile URL -->
    <profile_url>https://www.googleapis.com/plus/v1/people/me</profile_url>
  
    <!-- client ID from Oauth provider -->
    <client_id>ENTER_OAUTH_PROVIDER_ASSIGNED_CLIENT_ID</client_id>

    <!-- client secret from Oauth provider -->
    <client_secret>ENTER_OAUTH_PROVIDER_ASSIGNED_CLIENT_SECRET</client_secret>
  
    <!-- field from scope corresponding to username -->
    <uname_field>email</uname_field>
  </provider>
  
  <provider id="drupal7_oauth2_server"  enable="FALSE">
    <!-- The common name of the Oauth provider (e.g. Google) -->
    <provider_name>Drupal 7 Site</provider_name>
  
    <!-- Sign in Image for Provider. Should be in the WebApollo/images directory-->
    <provider_logo></provider_logo>
  
    <!-- Oauth provider authentication URL -->
    <auth_url>https://localhost/oauth2/authorize</auth_url>
  
    <!-- Oauth provider token URL -->
    <token_url>https://localhost/oauth2/token</token_url>
  
    <!-- Oauth provider profile URL -->
    <profile_url>https://localhost/oauth2/user/profile</profile_url> 
  
    <!-- client ID from Oauth provider -->
    <client_id>ENTER_OAUTH_PROVIDER_ASSIGNED_CLIENT_ID</client_id>

    <!-- client secret from Oauth provider -->
    <client_secret>ENTER_OAUTH_PROVIDER_ASSIGNED_CLIENT_SECRET</client_secret>
  
    <!-- field from scope corresponding to username -->
    <uname_field>ENTER_OAUTH_PROVIDER_SCOPE_FIELD_FOR_USERNAME</uname_field>
  </provider>

</oauth_configuration>
