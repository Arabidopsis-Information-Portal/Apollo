//http://logging.apache.org/log4j/2.x/manual/layouts.html
{
    "configuration": {
        "name": "Default",
        "properties": {
            "property": [{
                "name":"Directory",
                "value":"${sys:user.home}/logs"
            },
            {
                "name":"FileName",
                "value":"webapollo.log"
            }]
        },
        "appenders": {
            "Console": {
                "name":"Console",
                "target":"SYSTEM_OUT",
                "PatternLayout": {
                    "pattern":"%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"
                }
            },
            "RollingFile": {
                "name":"File",
                "fileName":"${Directory}/${FileName}",
                "filePattern":"${Directory}/${date:yyyy-MM}/webapollo-%d{MM-dd-yyyy}-%i.log.gz",
                "PatternLayout": {
                    "pattern":"%d %p %logger{36} [%t] %m%n"
                },
                "Policies": {
                    "SizeBasedTriggeringPolicy": {
                        "size":"1 MB"
                    }
                },
                "DefaultRolloverStrategy": {
                    "max":"10"
                }
            }
        },
        "loggers": {
            "root": {
                "level":"debug",
                "appender-ref": [{
                    "ref":"Console"
                },
                 {
                    "ref":"File"
                }]
            }
        }
    }
}
