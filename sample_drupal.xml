<?xml version="1.0" encoding="UTF-8"?>
<!-- This file provides configuration settings for integration of WebApollo with an existing Drupal site. -->
<drupal_configuration>
  <!-- user authentication/permission configuration -->
  <user>
    <database>
    
      <!-- JDBC URL for user database -->
      <!-- (e.g. jdbc:postgresql://localhost/drupal) -->
      <url>ENTER_DRUPAL_DATABASE_JDBC_URL</url>

      <!-- user name for user database -->
      <username>ENTER_DRUPAL_DATABASE_USERNAME</username>

      <!-- password for user database -->
      <password>ENTER_DRUPAL_DATABASE_PASSWORD</password>

    </database>
  </user>
</drupal_configuration>