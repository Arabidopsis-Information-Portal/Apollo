<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             xmlns:cellview="urn:import:com.google.gwt.user.cellview.client"
        >
    <!--<g:HTMLPanel>-->
    <!--New Panel-->
    <!--</g:HTMLPanel>-->
    <ui:style>

        .container {
            margin-left: 20px;
            margin-top: 10px;
        }

        .widgetPanel {
            display: inline-table;
            margin-right: 10px;
            margin-bottom: 5px;
        }

        .widgetLabel {
            font-size: large;
            padding-bottom: 20px;
            margin-bottom: 20px;
            vertical-align: middle;
        }

        .inputBox {

        }

        .phaseButton {
            background-color: cornflowerblue;
            font-weight: bold;
            font-size: large;
        }</ui:style>

    <gwt:SplitLayoutPanel>
        <gwt:west size="250">
            <cellview:DataGrid ui:field="dataGrid"/>
        </gwt:west>
        <gwt:center>
            <b:Container fluid="true" width="100%" styleName="{style.container}">
                <b:Row>
                    <b:Column size="MD_4" styleName="{style.widgetPanel}">
                        <b:InputGroup>
                            <b:InputGroupAddon>Max</b:InputGroupAddon>
                            <!--<b:TextBox autoComplete="false" ui:field="maxField" enabled="false"/>-->
                            <b:InputGroupAddon ui:field="maxField"/>
                        </b:InputGroup>
                    </b:Column>
                </b:Row>
                <b:Row>
                    <b:Column size="MD_4" styleName="{style.widgetPanel}">
                        <b:InputGroup>
                            <b:InputGroupAddon>Min</b:InputGroupAddon>
                            <!--<b:TextBox autoComplete="false" ui:field="minField"  enabled="false"/>-->
                            <b:InputGroupAddon ui:field="minField"/>
                        </b:InputGroup>
                    </b:Column>
                </b:Row>
                <b:Row>
                    <b:Column size="MD_4" styleName="{style.widgetPanel}">
                        <b:InputGroup>
                            <b:InputGroupAddon>Strand</b:InputGroupAddon>
                            <b:ButtonGroup dataToggle="BUTTONS" ui:field="strand">
                                <b:Button ui:field="negativeStrandValue" enabled="false" icon="MINUS"/>
                                <b:Button ui:field="positiveStrandValue"  enabled="false" icon="PLUS"/>
                            </b:ButtonGroup>
                        </b:InputGroup>
                    </b:Column>
                </b:Row>
                <!--<b:Row>-->
                    <!--<b:Column size="6" styleName="{style.widgetPanel}">-->
                        <!--<b:InputGroup>-->
                            <!--<b:InputGroupAddon>Phase</b:InputGroupAddon>-->
                            <!--<b:ButtonGroup dataToggle="BUTTONS">-->
                                <!--<b:Button ui:field="phaseButton"  enabled="false" styleName="{style.phaseButton}"/>-->
                            <!--</b:ButtonGroup>-->
                        <!--</b:InputGroup>-->
                    <!--</b:Column>-->
                <!--</b:Row>-->
                <b:Row>
                    <b:Column size="6" styleName="{style.widgetPanel}">
                        <gwt:HTML ui:field="notePanel"/>
                    </b:Column>
                </b:Row>
            </b:Container>
        </gwt:center>
    </gwt:SplitLayoutPanel>

</ui:UiBinder>