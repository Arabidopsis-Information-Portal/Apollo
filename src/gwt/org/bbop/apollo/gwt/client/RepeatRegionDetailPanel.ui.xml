<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:celltable="urn:import:org.gwtbootstrap3.client.ui.gwt"
        >
    <ui:style>

        .container {
            margin-left: 20px;
            margin-right: 20px;
            margin-top: 10px;
            /*border: solid;*/
            /*border-color: #000000;*/
        }

        .widgetPanel {
            /*display: inline-table;*/
            /*margin-right: 10px;*/
            margin-bottom: 5px;
            /*border: solid;*/
            /*border-color: #000000;*/
        }

        .widgetLabel {
            font-size: large;
            padding-bottom: 20px;
            margin-bottom: 20px;
            vertical-align: middle;
        }

        .inputBox {

        }
    </ui:style>

    <b:Container fluid="true" styleName="{style.container}">
        <b:Row>
            <b:Column size="XS_12" styleName="{style.widgetPanel}">
                <b:InputGroup >
                    <b:InputGroupAddon>Name</b:InputGroupAddon>
                    <b:TextBox autoComplete="false" ui:field="nameField" />
                </b:InputGroup>
            </b:Column>
        </b:Row>
        <b:Row>
            <b:Column size="XS_12" styleName="{style.widgetPanel}">
                <b:InputGroup>
                    <b:InputGroupAddon>Description</b:InputGroupAddon>
                    <b:TextBox autoComplete="false" ui:field="descriptionField"/>
                </b:InputGroup>
            </b:Column>
        </b:Row>
        <b:Row>
            <b:Column size="XS_12" styleName="{style.widgetPanel}">
                <b:InputGroup>
                    <b:InputGroupAddon>Location</b:InputGroupAddon>
                    <b:InputGroupAddon ui:field="locationField"/>
                </b:InputGroup>
            </b:Column>
        </b:Row>
        <b:Row>
            <b:Column size="XS_12" styleName="{style.widgetPanel}">
                <b:InputGroup>
                    <b:InputGroupAddon>Ref Sequence</b:InputGroupAddon>
                    <b:InputGroupAddon ui:field="sequenceField"/>
                </b:InputGroup>
            </b:Column>
        </b:Row>
        <b:Row>
            <b:Column size="XS_12" styleName="{style.widgetPanel}">
                <b:InputGroup>
                    <b:InputGroupAddon>Owner</b:InputGroupAddon>
                    <b:InputGroupAddon ui:field="userField"/>
                </b:InputGroup>
            </b:Column>
        </b:Row>
    </b:Container>
</ui:UiBinder>