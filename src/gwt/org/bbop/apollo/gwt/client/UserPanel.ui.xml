<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:cellview="urn:import:com.google.gwt.user.cellview.client"
        >
    <ui:style>
        .northPanel {
            padding: 0px;
            margin: 10px;
        }

        .widgetPanel {
            padding: 5px;
            margin: 5px;
        }

        .trackTable {
            margin-left: 10px;
            margin-top: 10px;
            vertical-align: middle;
        }

        /*.trackTable tr:hover{*/
        /*background-color: #d3d3d3;*/
        /*}*/

        .tableKeyName {
            font-weight: bolder;
        }

        .tableValue {
            /*font-weight: bolder;*/
        }

        .details-list {
            font-size: smaller;

        }

        /*.rowStyle {*/
        /*padding-bottom: 10px;*/
        /*}*/

        .center-table {
            margin: 10px;
        }

        .groupList td {
            padding-right: 5px;
            padding-top: 5px;
        }

        .divider {
            padding-bottom: 10px;
        }</ui:style>
    <gwt:SplitLayoutPanel>
        <!--<gwt:north size="80">-->
        <!--<b:Container fluid="true" styleName="{style.northPanel}">-->
        <!--<b:Row>-->
        <!--<b:Column size="MD_6" styleName="{style.widgetPanel}">-->
        <!--<b:TextBox placeholder="Search" width="300px" ui:field="nameSearchBox"/>-->
        <!--</b:Column>-->
        <!--</b:Row>-->
        <!--</b:Container>-->
        <!--</gwt:north>-->
        <gwt:center>
            <!--<b:DataGrid bordered="true" condensed="true" striped="true" hover="true" />-->
            <!--<gwt:ScrollPanel>-->

            <!--<gwt:FlexTable ui:field="dataGrid" styleName="{style.trackTable}" width="100%"/>-->
            <cellview:DataGrid ui:field="dataGrid" styleName="{style.trackTable}"/>
            <!--<b:CellTable bordered="true" condensed="true" striped="true" hover="true" width="100%"/>-->

            <!--</gwt:ScrollPanel>-->
        </gwt:center>
        <gwt:south size="200">
            <gwt:TabLayoutPanel barHeight="35" ui:field="userDetailTab">
                <gwt:tab>
                    <gwt:header>Details</gwt:header>
                    <b:Container fluid="true" width="100%">
                        <b:Row>
                            <b:Column size="MD_2">
                                <gwt:HTML styleName="{style.tableKeyName}" text="First Name"/>
                            </b:Column>
                            <b:Column size="MD_4">
                                <gwt:TextBox ui:field="firstName" styleName="{style.tableValue}"/>
                            </b:Column>
                            <b:Column size="MD_2">
                                <gwt:HTML styleName="{style.tableKeyName}" text="Last Name"/>
                            </b:Column>
                            <b:Column size="MD_4">
                                <gwt:TextBox ui:field="lastName" styleName="{style.tableValue}"/>
                            </b:Column>
                        </b:Row>
                        <b:Row>
                            <b:Column size="MD_2">
                                <gwt:HTML styleName="{style.tableKeyName}" text="Email"/>
                            </b:Column>
                            <b:Column size="MD_4">
                                <gwt:TextBox ui:field="email" styleName="{style.tableValue}"/>
                            </b:Column>
                            <b:Column size="MD_2">
                                <gwt:HTML styleName="{style.tableKeyName}" text="Role"/>
                            </b:Column>
                            <b:Column size="MD_4">
                                <gwt:ListBox ui:field="roleList" styleName="{style.details-list}"/>
                            </b:Column>
                        </b:Row>
                        <b:Row ui:field="passwordRow" visible="false">
                            <b:Column size="MD_2">
                                <gwt:HTML styleName="{style.tableKeyName}" text="Password"/>
                            </b:Column>
                            <b:Column size="MD_4">
                                <gwt:PasswordTextBox ui:field="passwordTextBox" styleName="{style.tableValue}"/>
                            </b:Column>
                        </b:Row>
                        <b:Row>
                            <b:Column size="MD_6">
                                <gwt:Button text="Create" ui:field="createButton"/>
                                <gwt:Button text="Cancel" ui:field="cancelButton" enabled="false"/>
                                <gwt:Button text="Delete" ui:field="deleteButton" enabled="false"/>
                                <gwt:Button text="Save" ui:field="saveButton" visible="false"/>
                            </b:Column>
                        </b:Row>
                    </b:Container>
                </gwt:tab>
                <gwt:tab>
                    <gwt:header>Groups</gwt:header>
                    <!--<gwt:HTML text="add / remove from all visible groups as admin"/>-->
                    <b:Container>
                        <b:Row>
                            <b:Column size="MD_2">
                                <b:ListBox ui:field="availableGroupList"/>
                                <!--</b:Column>-->
                                <!--<b:Column size="MD_2">-->
                            </b:Column>
                            <b:Column size="MD_1">
                                <b:Button ui:field="addGroupButton" text="Add"/>
                            </b:Column>
                            <!--</b:Row>-->
                            <!--<b:Row>-->
                            <!--<b:Column size="MD_6" styleName="{style.divider}">-->
                            <!--</b:Column>-->
                            <!--</b:Row>-->
                            <!--<b:Row>-->
                            <b:Column size="MD_3">
                                <gwt:FlexTable ui:field="groupTable" styleName="{style.groupList}"/>
                            </b:Column>
                        </b:Row>
                    </b:Container>
                </gwt:tab>
                <gwt:tab>
                    <gwt:header>Organisms</gwt:header>
                    <!--<gwt:HTML text="organism permissions"/>-->
                    <!--<gwt:FlexTable ui:field="organismPermissions" width="90%" styleName="{style.center-table}"/>-->
                    <cellview:DataGrid ui:field="organismPermissionsGrid" width="90%" styleName="{style.center-table}"/>
                </gwt:tab>
                <!--<gwt:tab>-->
                <!--<gwt:header>Tracks</gwt:header>-->
                <!--<gwt:HTML text="list tracks per organism"/>-->
                <!--</gwt:tab>-->
            </gwt:TabLayoutPanel>
        </gwt:south>

    </gwt:SplitLayoutPanel>
</ui:UiBinder>
